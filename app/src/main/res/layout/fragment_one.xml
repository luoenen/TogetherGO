<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/userImg"
                android:src="@mipmap/userimg"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/img_desc"
                android:text="@string/img_desc"
                android:layout_below="@id/userImg"
                android:layout_margin="4dp"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/input_nick"
                android:layout_marginTop="20dp"
                android:hint="请输入昵称"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_below="@id/userImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/input_university"
                android:layout_marginTop="20dp"
                android:hint="请输入大学"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_below="@id/input_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/input_major"
                android:layout_marginTop="20dp"
                android:hint="请输入专业"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_below="@id/input_university"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/input_sex"
                android:layout_marginTop="20dp"
                android:hint="请输入性别"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_below="@id/input_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/input_age"
                android:layout_marginTop="20dp"
                android:hint="请输入年龄"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_below="@id/input_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/input_address"
                android:layout_marginTop="20dp"
                android:hint="请输入籍贯"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_below="@id/input_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/input_tell"
                android:layout_marginTop="20dp"
                android:hint="输入联系方式"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_below="@id/input_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>